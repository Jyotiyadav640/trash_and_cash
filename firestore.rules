rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ================= AUTH CHECK =================
    function isLoggedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Check if the user is a verified collector
    function isCollector() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/collectorusers/$(request.auth.uid));
    }

    function isAdminCollector() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/collectorusers/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/collectorusers/$(request.auth.uid))
          .data.isAdmin == true;
    }

    // ================= PICKUP REQUESTS =================
    match /pickup_requests/{docId} {
      allow read: if isLoggedIn();
      allow create: if isLoggedIn();
      allow update: if isLoggedIn(); 
      allow delete: if false;
    }

    // ================= COLLECTOR USERS =================
    match /collectorusers/{userId} {
      allow read: if isLoggedIn();
      allow update: if isOwner(userId);
      allow delete: if false;
      allow create: if isLoggedIn();
    }

    // ================= GIVER USERS =================
    match /giverusers/{userId} {
      allow read: if isLoggedIn();
      // ðŸ”¥ FIX: Allow Owner OR Collector to update (for points)
      allow update: if isOwner(userId) || isCollector();
      allow delete: if false;
      allow create: if isLoggedIn();
    }

    // ================= REPORTS =================
    match /reports/{reportId} {
      allow create: if isLoggedIn();
      allow read: if isAdminCollector();
      allow update: if isAdminCollector();
      allow delete: if false;
    }

    // ================= NOTIFICATIONS =================
    match /notifications/{notificationId} {
      allow read: if isLoggedIn() && request.auth.uid == resource.data.userId;
      allow create: if isLoggedIn(); // Allow anyone to send notification
      allow update, delete: if isLoggedIn() && request.auth.uid == resource.data.userId;
    }

    // ================= ALERTS =================
    match /alerts/{alertId} {
      allow read: if isLoggedIn();
      allow create: if isAdminCollector();
      allow update, delete: if false;
    }
  }
}
